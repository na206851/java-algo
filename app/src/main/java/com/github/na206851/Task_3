 a) -1(10);
     1(10)=00000001;
    -1(10)=11111110 //back
           11111111 //additional
    11111111(2) //1 byte
    11111111_11111111(2) //2 byte
    11111111_11111111_11111111_11111111(2) //4 byte
    11111111_11111111_11111111_11111111_11111111_11111111_11111111_11111111(2) //8 byte

 b) -115(10);
    115(10)=01110011;
    -115(10) = 10001100 //back
               10001101 //additional
    10001101(2) //1 byte
    11111111_10001101(2) //2 byte
    11111111_11111111_11111111_10001101(2) //4 byte
    11111111_11111111_11111111_11111111_11111111_11111111_11111111_10001101(2) //4 byte