a)  97  | 2
   -96   48 | 2
     1  -48 | 2
          0  24 | 2
             -24 | 2
              0  12 | 2
                12 | 6
                 0 | 3 | 2
                     2 | 1
                     1
     97 (10) = 110001 (2)
     reverse 110001 = 1*2^6 + 1*2^5 + 1*2^2 + 1*2^1=64+32+4+1 = 97(10);

b) 97  | 8
  -96  | 12  | 8
    1    -8  | 1
          4
    97 (10) = 141 (8)
    reverse 141 (8) = 1*8^2 + 4*8^1 + 1*8^0 = 64 + 32 + 1 = 97(10);

c) 97  | 16
  -96  |6
    1

    97 (10) = 61 (16);
    reverse 61 (16) = 6*16^1 + 1*16^0 = 96 + 1 = 97(10);